<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx" gridLinesVisible="true"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" stylesheets="@../style/test-theme.css"
          fx:controller="com.rmt.gui.controllers.LoginController"
          prefHeight="400.0" prefWidth="600.0" vgap="20">

    <columnConstraints>
        <ColumnConstraints halignment="CENTER" percentWidth="30"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints valignment="CENTER" percentHeight="40"/>
        <RowConstraints valignment="CENTER" percentHeight="5"/>
        <RowConstraints valignment="CENTER" percentHeight="15"/>
        <RowConstraints valignment="CENTER" percentHeight="5"/>
        <RowConstraints valignment="CENTER" percentHeight="15"/>
        <RowConstraints valignment="TOP" percentHeight="10"/>
    </rowConstraints>

    <ImageView GridPane.rowIndex="0" GridPane.columnIndex="0">
<!--        #TODO Add logo-->
<!--        <image>-->
<!--            <Image/>-->
<!--        </image>-->
    </ImageView>

    <Label styleClass="credential-label" text="Username:" textAlignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <JFXTextField fx:id="username" alignment="CENTER" styleClass="credential-field" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label styleClass="credential-label" text="Password" textAlignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <JFXTextField fx:id="password" alignment="CENTER" styleClass="credential-field" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <HBox alignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="0">
        <JFXButton fx:id="loginButton" styleClass="start-button" text="LOGIN"/>
        <JFXButton fx:id="registerButton" styleClass="start-button" text="REGISTER"/>
        <JFXButton fx:id="backButton" onAction="#onBackButtonClicked" styleClass="start-button" text="BACK"/>
    </HBox>


</GridPane>
